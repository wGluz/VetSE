<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".consultas_agendadas">


    <TextView
        android:id="@+id/consultas_agendadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Consultas agendadas"
        android:textColor="@color/dark_green"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_voltar" />

    <ImageView
        android:id="@+id/img_perfil_vet"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="96dp"
        android:background="@drawable/circulo_imagem"
        android:src="@drawable/ic_baseline_person_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nome_vet_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Nome Vet"
        android:textColor="@color/dark_grey"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.828"
        app:layout_constraintStart_toEndOf="@+id/img_perfil_vet"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="166dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/localidade_vet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Bairro - Cidade - UF"
        android:textColor="@color/light_grey"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nome_vet_info" />

    <ImageView
        android:id="@+id/img_calendario"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/calendario"
        app:layout_constraintTop_toBottomOf="@+id/img_perfil_vet"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="49dp" />

    <ImageView
        android:id="@+id/img_horario"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/horario"
        app:layout_constraintTop_toBottomOf="@+id/img_perfil_vet"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="221dp" />

    <TextView
        android:id="@+id/info_data"
        style="@style/edit_text"
        android:layout_width="114dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/img_perfil_vet"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="78dp" />

    <TextView
        android:id="@+id/info_horário"
        style="@style/edit_text"
        android:layout_width="114dp"
        android:layout_height="42dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/edit_text"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/img_perfil_vet"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="253dp" />

    <TextView
        android:id="@+id/info_endereco"
        style="@style/edit_text"
        android:layout_width="328dp"
        android:layout_height="95dp"
        android:background="@drawable/edit_text"
        android:text="Meu endereço"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="469dp" />

    <TextView
        android:id="@+id/pet_dados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Nome do animal"
        android:textColor="@color/light_grey"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_horário" />


    <ImageButton
        android:id="@+id/bt_voltar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/bt_voltar"
        app:srcCompat="?attr/homeAsUpIndicator"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_cancelar_consulta"
        style="@style/Button"
        app:backgroundTint="@color/red"
        android:drawableRight="@drawable/ic_arrow_24"
        android:text="Cancelar consulta"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
        tools:layout_editor_absoluteY="621dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>