<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"

    android:background="@color/Green_main"
    android:paddingStart="30dp"
    android:paddingEnd="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/info_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:src="@drawable/user_photo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:text="Adriana Oliveira" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="adrianaoliveira@gmail.com" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="26dp">

            <TextView
                android:id="@+id/articles_option"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/book_icon"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:text="Artigos"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/chat_option"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/chat_icon"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:layout_marginBottom="26dp"
                android:textColor="@color/white"
                android:text="Chat"
                android:textAlignment="center" />


            <TextView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/divisor_line_white"/>

            <TextView
                android:id="@+id/animals_option"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/animal_icon"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:text="Animais"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/payment_option"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/payment_icon"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:text="Pagamento"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/appointment_option"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/appointment_icon"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:text="Consultas"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/historic_option"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/historic_icon"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:text="HistÃ³rico"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/faq_option"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/faq_icon"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:layout_marginBottom="26dp"
                android:textColor="@color/white"
                android:text="FAQ"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/exit_option"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/exit_icon"
                android:background="@drawable/bgreen_light_no_stroke"
                android:padding="12dp"
                android:paddingStart="0dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:text="Sair"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>